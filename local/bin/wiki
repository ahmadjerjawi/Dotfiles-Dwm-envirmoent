#!/bin/bash

# Change directory to user's home and .wiki directory
cd "$HOME/.wiki" || { echo "Directory $HOME/.wiki not found"; exit 1; }

# Function to find and extract port from the log
find_port() {
    local log_file="$HOME/.wiki/npm_output.log"
    local port=$(grep -oE 'localhost:[0-9]+' "$log_file" | cut -d ':' -f 2 | tail -n 1)
    echo "$port"
}

# Function to clean up if script exits
cleanup() {
    rm -f "$HOME/.wiki/npm_output.log"
}

# Trap exit signal to clean up
trap cleanup EXIT

# Start npm run preview in the background
npm run preview > "$HOME/.wiki/npm_output.log" 2>&1 &

# Loop until we find the port
while true; do
    port=$(find_port)
    if [ -n "$port" ]; then
        break
    fi
    sleep 1
done

# Open the website in surf
surf "http://localhost:$port"
